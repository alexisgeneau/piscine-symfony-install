{% extends "base.html.twig" %}

{% block metatitle %}
    Résultats de recherche | Le blog de la piscine
{% endblock metatitle %}


{% block main %}
    <h1>Résultats de recherche pour "{{ search }}" :</h1>

    {% for article in articles %}
        <article class="article-container" >
            <h2>{{ article.title }}</h2>
            <ul>
                <li><a href="{{ path('article_show', {id: article.id}) }}">Voir l'article</a></li>
                <li><a href="{{ path('delete_article', {id: article.id}) }}">Supprimer l'article</a></li>
            </ul>


        </article>
    {% endfor %}
{% endblock main %}
