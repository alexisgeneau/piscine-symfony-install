{% extends "base.html.twig" %}

{% block metatitle %}
    Liste des categories | Le blog de la piscine
{% endblock metatitle %}


{% block main %}

    <section class="articles-container">

        <h3>Il y a {{ categories | length }} categories actuellement</h3>

        {% for category in categories %}
            <article class="article-container" style="background-color: {{ category.color }}">
                <h2>{{ category.title }}</h2>
                <ul>
                    <li><a href="{{ path('show_category', {id: category.id}) }}">Voir la catégorie</a></li>
                    <li><a href="{{ path('delete_category', {id: category.id}) }}">Supprimer la catégorie</a></li>
                </ul>
            </article>
        {% endfor %}

    </section>
{% endblock main %}
